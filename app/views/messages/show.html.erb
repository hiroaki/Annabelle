<div id="messages-container" data-controller="messages">
  <h1>Messages#show</h1>

  <div id="form-container">
    <%= form_with(url: messages_create_path, html: { 'data-action' => 'turbo:submit-end->messages#resetForm' }) do |form| %>
      <%= form.text_area :content, rows: 3, cols: 80 %>
      <%= form.file_field(:attachement) %>
      <%= form.submit('Submit')%>
    <% end %>
  </div>

  <ul id="messages">
    <%= render @messages %>
  </ul>
</div>
