<% flash.each do |message_type, message| %>
  <% if message_type.to_sym == :alert %>
    <div class="p-4 mb-4 text-sm text-red-700 bg-red-100 rounded-lg" role="alert" data-controller="dismissable">
      <%= message %>
    </div>
  <% elsif message_type.to_sym == :notice %>
    <div class="p-4 mb-4 text-sm text-blue-700 bg-blue-100 rounded-lg" role="alert" data-controller="dismissable">
      <%= message %>
    </div>
  <% else %>
    <div class="p-4 mb-4 text-sm text-yellow-700 bg-yellow-100 rounded-lg" role="alert" data-controller="dismissable">
      <%= message %>
    </div>
  <% end %>
<% end %>
