<div class="container p-4">
  <h2 class="text-2xl font-bold mb-4">Edit <%= resource_name.to_s.humanize %></h2>

  <%= render "messages/flash" %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-6">
      <div>
        <%= f.label :email, class: "block mb-2 text-sm font-medium text-gray-900" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="flex items-center">
          <p class="text-sm text-gray-500">
            Currently waiting confirmation for: <%= resource.unconfirmed_email %>
          </p>
        </div>
      <% end %>
    </div>

    <div class="mb-6">
      <%= f.label :username, class: "block mb-2 text-sm font-medium text-gray-900" %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
    </div>

    <div class="mb-6">
      <%= f.label :password, class: "block mb-2 text-sm font-medium text-gray-900" %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Your new password", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
      <% if @minimum_password_length %>
        <p class="mt-2 text-sm text-gray-500">
          <%= @minimum_password_length %> characters minimum
        </p>
      <% end %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, class: "block mb-2 text-sm font-medium text-gray-900" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm new password", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
    </div>

    <div class="mb-6">
      <%= f.label :current_password, class: "block mb-2 text-sm font-medium text-gray-900" %>
      <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Current password", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
      <p class="mt-2 text-sm text-gray-500">
        We need your current password to confirm your changes.
      </p>
    </div>

    <div class="flex items-center justify-between">
      <%= f.submit "Update", class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
    </div>
  <% end %>

  <hr class="my-4">

  <div class="mb-4">
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>

        <% provider_name = OmniAuth::Utils.camelize(provider) %>

        <% if resource.linked_with?(provider) %>
          <%=
            button_to("#{provider_name}アカウントの連携を解除", unlink_oauth_path,
              method: :delete,
              class: "w-full text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mb-2",
              data: {
                turbo: false,
                confirm: '本当に#{provider_name}認証を無効化しますか？',
              },
              id: "unlink-button-#{provider}"
            )
          %>
        <% else %>
          <%=
            button_to("#{provider_name}アカウントと連携", omniauth_authorize_path(resource_name, provider),
              class: "w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mb-2",
              data: { turbo: false },
              id: "oauth-button-#{provider}"
            )
          %>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <hr class="my-4">

  <h3 class="text-xl font-bold mt-8 mb-4">Cancel my account</h3>

  <div class="mb-4">
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
  </div>

  <hr class="my-4">

  <%= link_to "Back", messages_path, class: "text-blue-600 hover:underline" %>
</div>
