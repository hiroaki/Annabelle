<%# The container tag
  - available local variables
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
    paginator:     the paginator that renders the pagination tags inside
-%>
<%= paginator.render do -%>
  <nav class="flex items-center justify-between p-2 mb-2 bg-gray-100 text-xs" role="navigation" aria-label="pager">
    <div>
      <%= first_page_tag %>
      <%= prev_page_tag %>
    </div>
    <div>
      <% each_page do |page| -%>
        <% if page.display_tag? -%>
          <%= page_tag page %>
        <% elsif !page.was_truncated? -%>
          <%= gap_tag %>
        <% end -%>
      <% end -%>
    </div>
    <div>
      <%= next_page_tag %>
      <%= last_page_tag %>
    </div>
  </nav>
<% end -%>
