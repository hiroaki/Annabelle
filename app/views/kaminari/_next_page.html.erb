<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<span class="next">
  <% if current_page.last? %>
    <%= content_tag('span', t('views.pagination.next').html_safe,
      class: "bg-gray-100 text-gray-600 font-light py-1 px-4 rounded-sm"
    ) %>
  <% else %>
    <%= link_to(t('views.pagination.next').html_safe, url,
      rel: 'next',
      remote: remote,
      class: "bg-white hover:bg-gray-100 text-gray-600 font-light py-1 px-4 border border-gray-400 rounded-sm shadow-sm",
    ) %>
  <% end %>
</span>
