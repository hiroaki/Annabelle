<%# Show current locale and provide links to change it %>
<div class="language-switcher flex items-center space-x-2" data-turbo="false">
  <%= link_to_unless_current "日本語", LocaleHelper.current_path_with_locale(request, :ja), class: "hover:text-slate-600 #{I18n.locale == :ja ? 'font-bold' : ''}" %>
  <span>|</span>
  <%= link_to_unless_current "English", LocaleHelper.current_path_with_locale(request, :en), class: "hover:text-slate-600 #{I18n.locale == :en ? 'font-bold' : ''}" %>
</div>
