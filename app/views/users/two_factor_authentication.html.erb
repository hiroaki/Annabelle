<turbo-frame id="devise">
<div class="container p-4">
  <h2 class="text-2xl font-bold mb-4">Two Factor Authentication</h2>

  <%= render 'shared/flash' %>

  <% if current_user.otp_required_for_login %>
    <div class="mb-4">
      <p class="text-sm text-gray-700 mb-2">
        Two factor authentication is <span class="font-semibold text-green-600">enabled</span>.
      </p>
      <div class="my-4">
        <%=
          link_to('Disable Two Factor Authentication', two_factor_settings_path,
            class: 'text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center',
            method: :delete,
            data: {
              turbo_method: :delete,
              turbo_confirm: 'Are you sure you want to disable two factor authentication?',
            }
          )
        %>
      </div>
    </div>
  <% else %>
    <div class="mb-4">
      <p class="text-sm text-gray-700 mb-2">
        Two factor authentication is <span class="font-semibold text-red-600">not enabled</span>.
      </p>
      <div class="my-4">
        <%=
          link_to('Enable Two Factor Authentication', new_two_factor_settings_path,
            class: 'text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center',
          )
        %>
      </div>
    </div>
  <% end %>
</div>
</turbo-frame>
