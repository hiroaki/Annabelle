<turbo-frame id="devise">
  <h2>Two Factor Authentication</h2>

  <%= form_for(@user, html: { method: :put, class: "space-y-6" }) do |f| %>

    <div class="mb-6">
      <%= f.label :otp_required_for_login, '2FAを有効にする' %><br>
      <%= f.check_box :otp_required_for_login %>
    </div>

    <div class="flex items-center justify-between">
      <%= f.submit "Update", class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
    </div>

  <% end %>

</turbo-frame>
